<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Awareness</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h2>Edit Awareness</h2>
        <form id="editAwarForm" method="post">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" name="title" value="<%=awar.title%>" required>
            </div>
            <div class="form-group">
                <label for="content">Body:</label>
                <textarea class="form-control" id="content" name="content"  cols="100" rows="100" ><%=awar.content%></textarea>
            </div>
            <div class="form-group">
                <label for="image">image:</label>
                <input type="file" class="form-control" id="image" name="image" value="<%=awar.image%>" >
            </div>
            <button type="submit" class="btn btn-primary">Edit Awareness</button>
        </form>
    </div>
    
    <script >
const editSpeakerForm = document.getElementById('editAwarForm');
editSpeakerForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    // Create FormData object and append form values
    const formData = new FormData();
    formData.append('title', document.getElementById('title').value);
    formData.append('content', document.getElementById('content').value);
    formData.append('image', document.getElementById('image').files[0]);

    // Send FormData via fetch (no need to manually set Content-Type)
    const response = await fetch(`/api/awar/<%= awar._id %>`, {
        method: 'PUT',
        body: formData // Send FormData directly
    });

    if (response.ok) {
        alert('Awareness updated successfully');
        window.location.href = '/Awar';
    } else {
        alert('Failed to update awareness');
    }
});

    </script>

</body>
</html>
